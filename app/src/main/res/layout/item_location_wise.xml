<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="@dimen/dimen10dp"
        app:cardCornerRadius="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location: 1100KSHIFSK9879"
                        android:id="@+id/tv_location_name"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:textColor="@color/text_color">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subloc: 1008888"
                        android:id="@+id/tv_sub_loc"
                        android:textSize="10sp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/text_color">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Serial No: MK3920"
                        android:textSize="10sp"
                        android:id="@+id/tv_serial"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/text_color">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dimen10dp"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="RNDIW45"
                        android:id="@+id/tv_product"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="@dimen/dimen5dp"
                        android:background="@drawable/capsule_bg"
                        android:textSize="10sp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="@dimen/dimen5dp"
                android:background="#f0f0f0">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:lineSpacingExtra="2dp"
                    android:id="@+id/tv_details"
                    tools:text="Identifier 1: PCA1122902830\nIdentifier 2: 1100\nOwner: AE012\nStatus: Active\nAnalysis Request: "
                    android:textSize="10sp"
                    android:textColor="#909090">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:lineSpacingExtra="2dp"
                    android:id="@+id/tv_quantity"
                    tools:text="PAC Quantity: 300\nPacking Unit: UN\nAllowed Quantity: 300\nSTK Quantity: 300"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="10sp"
                    android:textColor="#909090">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
